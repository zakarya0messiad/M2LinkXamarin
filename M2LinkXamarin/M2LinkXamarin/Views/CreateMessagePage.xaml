<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M2LinkXamarin.Views.CreateMessagePage">
    <ContentPage.Content>
        <StackLayout Padding="40">
            <BoxView HeightRequest="30"/>
            <Label Text="Publier un message" Font="Large" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
            <BoxView HeightRequest="20"/>
            <Editor x:Name="editor" TextColor="Black" HeightRequest="150" />
            <Label x:Name="messageLabel" Font="Large" TextColor="Red"/>
            <BoxView HeightRequest="20"/>
            <Button Text="Publier" Clicked="Button_post_message"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>